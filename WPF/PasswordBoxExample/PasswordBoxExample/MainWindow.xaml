<Window x:Class="PasswordBoxExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordBoxExample"
        mc:Ignorable="d"
        Title="PasswordBoxExample" Height="450" Width="800">

    <StackPanel Margin="10">
        <Label>Text:</Label>
        <TextBox/>
        <Label>Password:</Label>
        <PasswordBox PasswordChar="X" MaxLength="10" x:Name="UiPasswordBox"/>

        <Separator/>
        <Button Click="ButtonClicked">Show it to me...</Button>
    </StackPanel>
    
</Window>
