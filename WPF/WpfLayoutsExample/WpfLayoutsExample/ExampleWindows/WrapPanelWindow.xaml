<Window x:Class="WpfLayoutsExample.ExampleWindows.WrapPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutsExample.ExampleWindows"
        mc:Ignorable="d"
        Title="WrapPanelWindow" Height="450" Width="800">

    <WrapPanel Orientation="Horizontal">
        <!-- First Name -->
        <TextBlock Text="First Name" FontSize="20" Margin="10" Padding="5"/>
        <TextBox MinWidth="250" Margin="10" Padding="5"/>

        <!-- Last Name -->
        <TextBlock Text="Last Name" FontSize="20" Margin="10" Padding="5"/>
        <TextBox MinWidth="250" Margin="10" Padding="5"/>

        <!-- Age -->
        <TextBlock Text="Age" FontSize="20" Margin="10" Padding="5"/>
        <TextBox MinWidth="150" Margin="10" Padding="5"/>

        <!-- Title -->
        <TextBlock Text="Title" FontSize="20" Margin="10" Padding="5"/>
        <TextBox MinWidth="150" Margin="10" Padding="5"/>
    </WrapPanel>
    
</Window>
