<Window x:Class="WpfLayoutsExample.ExampleWindows.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutsExample.ExampleWindows"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">

    <DockPanel>
        <Button Content="Top" FontSize="22" DockPanel.Dock="Top" Background="Aqua"/>
        <Button Content="Bottom" FontSize="22" DockPanel.Dock="Bottom" Background="Bisque"/>
        <Button Content="Left" FontSize="22" DockPanel.Dock="Left" Background="Red"/>
        <Button Content="Right" FontSize="22" DockPanel.Dock="Right" Background="Green"/>
        <Button Content="Center" FontSize="22" Background="Orange"/>
    </DockPanel>
    
</Window>
