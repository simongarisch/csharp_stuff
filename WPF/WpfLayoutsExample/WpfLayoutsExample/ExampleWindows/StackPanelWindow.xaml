<Window x:Class="WpfLayoutsExample.ExampleWindows.StackPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutsExample.ExampleWindows"
        mc:Ignorable="d"
        Title="StackPanelWindow" Height="300" Width="500">

    <StackPanel Orientation="Horizontal" Margin="5" Background="AliceBlue">
        <StackPanel Orientation="Horizontal">
            <Label Content="These" FontSize="22"/>
            <Label Content="Are" FontSize="22"/>
            <Label Content="Stacked" FontSize="22"/>
            <Label Content="Horizontally" FontSize="22"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Margin="5" Background="BlanchedAlmond">
            <Label Content="And" FontSize="22"/>
            <Label Content="These" FontSize="22"/>
            <Label Content="Are" FontSize="22"/>
            <Label Content="Stacked" FontSize="22"/>
            <Label Content="Vertically" FontSize="22"/>
        </StackPanel>
    </StackPanel>
    
</Window>
