<Window x:Class="WpfLayoutsExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLayoutsExample"
        mc:Ignorable="d"
        Title="WPF Layouts" Height="400" Width="300">

    <StackPanel Margin="50"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="AliceBlue">
        <Button Content="StackPanel" FontSize="22" Padding="5" Margin="5" Click="StackPanelButton_Click"/>
        <Button Content="WrapPanel" FontSize="22" Padding="5" Margin="5" Click="WrapPanelButton_Click"/>
        <Button Content="DockPanel" FontSize="22" Padding="5" Margin="5" Click="DockPanelButton_Click"/>
        <Button Content="CanvasPanel" FontSize="22" Padding="5" Margin="5" Click="CanvasPanelButton_Click"/>
        <Button Content="GridPanel" FontSize="22" Padding="5" Margin="5" Click="GridPanelButton_Click"/>
    </StackPanel>
    
</Window>
